{
  "compilerOptions": {
    "target": "es5",
    "lib": ["DOM", "esnext"],
    "jsx": "react-jsx",
    "module": "commonjs",
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
